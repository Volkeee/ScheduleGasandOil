<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_height="100dp"
                android:elevation="0dp"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_light"
                android:layout_width="25dp"
                android:id="@+id/view_color_mark" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lesson 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_number"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:padding="8dp" />

                <TextView
                    android:text="auditory 4321"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_auditory"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:padding="8dp" />
            </LinearLayout>

            <TextView
                android:text="Методолігні основи наукових досліджен в нафтогазові справі"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtView_discipline"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:padding="8dp" />

            <TextView
                android:text="1st subgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtView_subgroup"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>